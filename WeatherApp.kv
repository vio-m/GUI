BoxLayoutX:




<BoxLayoutX>:
    orientation: "vertical"


    ScrollView:
        do_scroll_y: True

        BoxLayout:
            size_hint: 1, None
            height: self.minimum_height
            orientation: "vertical"
            Label:
                id: label0
                text: root.time
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label1
                text: "~ {} ~".format(root.desc)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label2
                text: "Temperature: {}".format(root.temp)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label3
                text: "Feels like: {}".format(root.feels_like)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label4
                text: "Wind: {}".format(root.wind)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label5
                text: "Pressure: {}".format(root.pressure)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label6
                text: "Humidity: {}".format(root.humidity)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)
            Label:
                id: label7
                text: "Visibility: {}".format(root.visibility)
                size_hint: 1, None
                font_size: 20
                color: (75/255, 0/255, 130/255, 1)

    BoxLayout:
        size_hint: 1, None
        height: "40dp"
        Button:
            text: "<"
            font_size: 20
            on_press: root.prev()
            background_color: (155/255, 195/255, 225/255, 1)
        Button:
            text: "NOW"
            font_size: 20
            on_press: root.today()
            background_color: (155/255, 195/255, 225/255, 1)
        Button:
            text: ">"
            font_size: 20
            on_press: root.next()
            background_color: (155/255, 195/255, 225/255, 1)








